<h2>Edit a Movie</h2>

<form action="/movies/{{myMovie._id}}" method="POST">
  <ul>
    <li>
      <label for="movies">Movies</label>
      <input type="text" name="movies" id="movies" value="{{myMovie.title}}">
    </li>
    <li>
      <label for="genre">Genre</label>
      <input type="text" name="genre" id="genre" value="{{myMovie.genre}}">
    </li>
    <li>
      <label for="plot">Plot</label>
      <input type="text" name="plot" id="plot" value="{{myMovie.plot}}">
    </li>
  </ul>
  <button>Submit</button>
</form>